{
  "compilerOptions": {
    "target": "ES6",                      
    "module": "CommonJS",              
    "outDir": "./dist",                  
    "rootDir": "./src",                   
    "strict": true,                     
    "esModuleInterop": true,           
    "emitDecoratorMetadata": true,       
    "experimentalDecorators": true,    
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],                
  "exclude": ["node_modules", "dist"]    
}
